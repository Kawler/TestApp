<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Home" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>


        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="cardBackgroundColor">@color/grey_100</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/grey_300</item>
        <item name="textColorButton">@color/white</item>
        <item name="textColorNumber">@color/grey_400</item>

        <!-- Common text appearances -->
        <item name="textAppearanceTitle1">@style/TextAppearance.Home.Title1</item>
        <item name="textAppearanceTitle2">@style/TextAppearance.Home.Title2</item>
        <item name="textAppearanceTitle3">@style/TextAppearance.Home.Title3</item>
        <item name="textAppearanceTitle4">@style/TextAppearance.Home.Title4</item>
        <item name="textAppearanceText1">@style/TextAppearance.Home.Text1</item>
        <item name="textAppearanceButtonText1">@style/TextAppearance.Home.ButtonText1</item>
        <item name="textAppearanceButtonText2">@style/TextAppearance.Home.ButtonText2</item>
        <item name="textAppearanceTabText">@style/TextAppearance.Home.TabText</item>
        <item name="textAppearanceNumber">@style/TextAppearance.Home.Number</item>

        <!-- Custom card style-->
        <item name="cardViewStyle">@style/Widget.Home.CardView</item>
    </style>
    <style name="Theme.Home" parent="Base.Theme.Home"/>

    <!-- Text Appearances -->
    <style name="TextAppearance.Home.Title1" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/sf_semibold</item>
    </style>

    <style name="TextAppearance.Home.Title2" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/sf_semibold</item>
    </style>

    <style name="TextAppearance.Home.Title3" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_medium</item>
    </style>

    <style name="TextAppearance.Home.Title4" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sf_medium</item>
    </style>

    <style name="TextAppearance.Home.Text1" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sf_regular</item>
    </style>

    <style name="TextAppearance.Home.ButtonText1" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_semibold</item>
    </style>

    <style name="TextAppearance.Home.ButtonText2" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/sf_regular</item>
    </style>

    <style name="TextAppearance.Home.TabText" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/sf_regular</item>
    </style>

    <style name="TextAppearance.Home.Number" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">7sp</item>
        <item name="fontFamily">@font/sf_regular</item>
    </style>

    <!-- Custom card style-->
    <style name="Widget.Home.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/grey_100</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>